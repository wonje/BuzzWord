<?xml version="1.0" encoding="UTF-8"?>
<!--
    This XML file allows us to easily customize the look and language used
    in our program's user interface. Note that this properties file is only
    for the standard controls for an app from the SimpleAppFramework, so
    it would not include things initialized for the workspace, which is
    customizable.
-->
<properties>
    <property_list>
        <property name="APP_WINDOW_WIDTH" value="1024"/>
        <property name="APP_WINDOW_HEIGHT" value="768"/>
        <property name="APP_TITLE" value="BuzzWord"/>
        <property name="APP_LOGO" value="Logo.png"/>
        <property name="APP_PATH_CSS" value="css"/>
        <property name="APP_CSS" value="buzzword_style.css"/>
        <property name="APP_SAVED_GAMES_PATH" value="work"/>

        <!-- GAME OPTIONS -->
        <property name="ENGLISH_DICTIONARY" value="English Dictionary"/>
        <property name="BACTERIA" value="Bacteria"/>
        <property name="BIOLOGY" value="Biology"/>
        <property name="FUNGI" value="Fungi"/>

        <!-- LOGIN CONTROLLER CSS PROPERTIES -->
        <property name="LOGIN_BUTTON" value="login-button"/>

        <!-- WORKSPACE CSS PROPERTIES -->
        <property name="ROOT_BORDERPANE_ID" value="background"/>
        <property name="CLOSE_BUTTON_IMAGE" value="close-button-image"/>
        <property name="PAUSE_BUTTON_IMAGE" value="pause-button-image"/>
        <property name="PLAY_BUTTON_IMAGE" value="play-button-image"/>
        <property name="HELP_BUTTON_IMAGE" value="help-button-image"/>
        <property name="MATCHED_STATUS" value="matched-status"/>
        <property name="MATCHED_STATUS_WORD" value="matched-status-word"/>
        <property name="TARGET_POINT" value="target-point"/>
        <property name="REPLAY_NEXTPLAY" value="replay-nextplay"/>

        <!-- SCREEN CSS PROPERTIES -->
        <property name="SOLUTIONS_SCREEN" value="solutions-screen"/>
        <property name="HELP_SCREEN" value="help-screen"/>

        <!-- MENU CSS PROPERTIES -->
        <property name="MENU_BUTTON" value="menu-button"/>
        <property name="MENU_IMAGE" value="menu-image"/>
        <property name="MENU_ID_IMAGE" value="menu-id-image"/>
        <property name="MENU_MODE_IMAGE" value="menu-mode-image"/>
        <property name="MENU_MODEDISPLAY_IMAGE" value="menu-modedisplay-image"/>
        <property name="MODE_LIST" value="mode-list"/>

        <!-- GRID ELEMENTS CSS PROPERTIES -->
        <property name="GRID" value="grid"/>
        <property name="GRID_OPENLEVEL" value="grid-openlevel"/>
        <property name="GRID_SELECTED" value="grid-selected"/>

        <!-- LABEL NAME PROPERTIES -->
        <property name="CREATE_PROFILE_LABEL" value="Create New Profile"/>
        <property name="LOGIN_LABEL" value="Login/Logout"/>
        <property name="SELECT_MODE_LABEL" value="Select Mode"/>
        <property name="START_PLAYING_LABEL" value="Start Playing"/>
        <property name="HOME_LABEL" value="Home"/>
        <property name="TITLE_LABEL" value="title-label"/>
        <property name="MODE_LABEL" value="mode-label"/>
        <property name="REMAINING_LABEL" value="remaining-label"/>


        <!-- LOGIN CONTROLLER PROPERTIES -->
        <property name="CREATE_PROFILE_TITLE" value="New Profile"/>
        <property name="CREATE_PROFILE_MESSAGE" value="CREATE NEW PROFILE"/>
        <property name="LOGIN_TITLE" value="Login"/>
        <property name="LOGIN_MESSAGE" value="LOGIN"/>

        <!-- TOOLTIPS FOR BUTTONS -->
        <property name="CREATE_ID_TOOLTIP" value="Create a new profile"/>
        <property name="SETTING_PROFILE_TOOLTIP" value="Setting your profile data"/>
        <property name="LOGIN_TOOLTIP" value="Login"/>
        <property name="DISPLAY_ID_TOOLTIP" value="Your ID"/>
        <property name="SELECT_MODE_TOOLTIP" value="Select game mode"/>
        <property name="HOME_TOOLTIP" value="Go back to home screen"/>
        <property name="PLAYING_TOOLTIP" value="Start playing game"/>

        <!-- ERROR MESSAGES -->
        <property name="CLOSE_BUTTON_TEXT" value="Close"/>
        <property name="TARGET_LOAD_ERROR" value="There are no targets to load"/>
        <property name="TARGET_LOAD_ERROR_TITLE" value="Target Error"/>

        <property name="NEW_ERROR_TITLE" value="Creation Error"/>
        <property name="NEW_ERROR_MESSAGE" value="An error occured starting a new game"/>
        <property name="LOAD_ERROR_TITLE" value="Load Error"/>
        <property name="LOAD_ERROR_MESSAGE" value="An error occured loading saved game"/>
        <property name="SAVE_ERROR_TITLE" value="Save Error"/>
        <property name="SAVE_ERROR_MESSAGE" value="An error occured saving game"/>
        <property name="PROPERTIES_LOAD_ERROR_TITLE" value="Property Load Error"/>
        <property name="PROPERTIES_LOAD_ERROR_MESSAGE" value="An error occured loading a property file."/>

        <!-- VERIFICATION MESSAGES -->
        <property name="NEW_COMPLETED_MESSAGE" value="New Game Ready"/>
        <property name="NEW_COMPLETED_TITLE" value="New Game Created"/>
        <property name="LOAD_COMPLETED_MESSAGE" value="Game Loaded"/>
        <property name="LOAD_COMPLETED_TITLE" value="Loading Completed"/>
